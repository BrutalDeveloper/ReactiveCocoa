run() {
	if [[ "$1" == "AppKit" ]]; then
		FOLDER_PATH=AppKit
	fi

	if [[ "$1" == "UIKit" ]]; then
		FOLDER_PATH=UIKit/$2
	fi
	
        script/gyb/gyb -Dframework=$1 -Dtarget=$2 --line-directive '' -o ReactiveCocoa/$FOLDER_PATH/BindingTargetSubstituting.swift ReactiveCocoa/BindingTargetSubstituting.swift.gyb
}

run AppKit macOS
run UIKit iOS
run UIKit tvOS
